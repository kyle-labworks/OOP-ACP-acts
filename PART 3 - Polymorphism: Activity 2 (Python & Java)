# PYTHON

def make_it_speak(obj):
    obj.speak()

class Bird:
    def speak(self):
        print("Tweet!")

class Robot:
    def speak(self):
        print("Beep boop!")

make_it_speak(Bird())
make_it_speak(Robot())
# make_it_speak(123)  # Uncommenting this will cause an error


# Answer in 1: If it has the method, we can use it
# Answer in 2: Error: int has no speak() method



// JAVA

interface Speaker {
    void speak();
}

class Bird implements Speaker {
    public void speak() {
        System.out.println("Tweet!");
    }
}

class Robot implements Speaker {
    public void speak() {
        System.out.println("Beep boop!");
    }
}

public class Main {
    public static void main(String[] args) {
        Speaker s1 = new Bird();
        Speaker s2 = new Robot();
        s1.speak();
        s2.speak();
    }
}


// Answer in 1: If it has the method, we can use it
// Answer in 2: Error: 123 is not a Speaker
